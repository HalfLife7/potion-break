{{>custom-header}}
</head>
<html>

<body>
    {{>nav-bar}}
    <section class="hero is-medium">
        <div class="hero-body" style="background-image: url('/images/hero/potion-break-success/{{image}}'); background-position: center;">
            <div class="container">
                <h1 class="title outline-text has-text-centered has-text-white">
                    You have successfully started a potion break
                </h1>
                <h2 class="subtitle outline-text has-text-centered has-text-white">
                    Best of luck!
                </h2>
            </div>
        </div>
    </section>
    <section class="px-5 py-5 has-background-light">
        <div class="container">
            <div class="tile is-ancestor">
                <div class="tile is-vertical is-8">
                    <div class="tile">
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title has-text-centered">Total Days</p>
                                <div class="content">
                                    <p class="has-text-centered is-size-3">{{potionBreakData.total_days}}
                                    </p>
                                </div>
                            </article>
                        </div>
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title has-text-centered">End Date</p>
                                <div class="content">
                                    <p class="has-text-centered is-size-4">
                                        {{potionBreakData.formatted_end_date}}</p>
                                </div>
                            </article>
                        </div>
                    </div>
                    <div class="tile">
                        <div class="tile is-parent is-vertical">
                            <article class="tile is-child box">
                                <p class="title has-text-centered">Value Pledged</p>
                                <div class="content">
                                    <p class="has-text-centered is-size-4">
                                        ${{potionBreakData.total_value}}</p>
                                </div>
                            </article>
                            <article class="tile is-child box">
                                <p class="title has-text-centered">Game</p>
                                <figure class="image is-3by1">
                                    <img src="http://media.steampowered.com/steamcommunity/public/images/apps/{{potionBreakData.game_id}}/{{potionBreakData.game_img_logo_url}}.jpg"
                                        alt="{{potionBreakData.game_name}} Logo">
                                </figure>
                            </article>
                        </div>
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title has-text-centered">Charity</p>
                                <figure class="image is-4by3">
                                    <img src="{{potionBreakData.charity_img_path}}" alt="Logo of {{potionBreakData.charity_name}}">
                                </figure>
                            </article>
                        </div>
                    </div>
                </div>
                <div class="tile is-parent">
                    <article class="tile is-child box">
                        <div class="content">
                            <p class="title has-text-centered">Charity Description</p>
                            <div class="content">
                                <p class="has-text-justified is-size-5">
                                    {{potionBreakData.charity_description}}</p>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
    </section>
    {{>footer}}
</body>

</html>